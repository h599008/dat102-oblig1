
public class Main {
	
	public static void main(String[] args) {
		System.out.println("Testing an initially empty bag with the capcity to hold at least 6 strings");
		BagInterface<String> bag1 = new ArrayBag<>();
		String[] contentsOfBag1 = {"a", "b", "c", "d", "e", "f"};
		testAdd(bag1, contentsOfBag1);
		
		bag1 = new ArrayBag<>(7);
		String[] contentsOfBag2 = {"a", "b", "a", "c", "b", "c", "d", "another string"};
		testAdd(bag1, contentsOfBag2);
	}
	
	
	private static void testAdd(BagInterface<String> bag, String[] content) {
		for (int i=0; i < content.length; i++) {
			if (bag.add(content[i])) {
				System.out.print(content[i] + " ");
			} else {
				System.out.println();
				
				displayBag(bag);
			}
		}
	}
	
	private static void displayBag(BagInterface<String> bag) {
		System.out.println("The bag contains the following string(s):");
		Object[] bagArray = bag.toArray();
		for (int i=0; i < bagArray.length; i++) {
			System.out.print(bagArray[i] + " ");
		}
		System.out.println();
	}
}
